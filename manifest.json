{
  "manifest_version": 2,
  "name":"Clippety Do Dah",
  "description": "Remember the old Excel macros where you could press record and it would record your actions? This is just like that, only for Youtube.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Test Extension",
    "default_icon":  "icon.png",
    "default_title": "Click here!",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js":["jquery-2.1.3.min.js", "clipetty_content_script.js", "injector.js"]
    }
  ],
  "permissions": [
    "declarativeContent",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": ["clippety_injected.js"]
}